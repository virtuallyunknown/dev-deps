{
    "name": "@virtuallyunknown/eslint-server",
    "version": "0.1.3",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "node esbuild.js",
        "check": "tsc",
        "lint": "eslint 'src/**/*.ts' --max-warnings 0 --report-unused-disable-directives"
    },
    "exports": {
        ".": {
            "types": "./src/index.js",
            "import": "./out/index.js"
        },
        "./types": {
            "types": "./src/types.js",
            "import": "./out/types.js"
        },
        "./trpc": {
            "types": "./src/trpc.js",
            "import": "./out/trpc.js"
        },
        "./db": {
            "types": "./src/db/db.ts",
            "import": "./out/db/db.js"
        }
    },
    "dependencies": {
        "@stylistic/eslint-plugin": "^2.1.0",
        "@trpc/client": "^10.45.2",
        "@trpc/server": "^10.45.2",
        "@types/node": "^20.14.2",
        "@typescript-eslint/eslint-plugin": "^7.12.0",
        "ajv": "6.12.6",
        "eslint": "^9.4.0",
        "eslint-plugin-react": "^7.34.2",
        "eslint-plugin-react-hooks": "5.1.0-rc-99da76f23a-20240606",
        "eslint-plugin-unicorn": "^53.0.0",
        "express": "^5.0.1",
        "json-schema": "^0.4.0",
        "microdiff": "^1.4.0",
        "superjson": "^2.2.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/eslint": "^8.56.9",
        "@types/express": "^5.0.0",
        "@types/json-schema": "^7.0.15",
        "@virtuallyunknown/esbuild": "0.1.3",
        "@virtuallyunknown/eslint-config": "0.1.3",
        "@virtuallyunknown/tsconfig": "0.1.3"
    }
}
