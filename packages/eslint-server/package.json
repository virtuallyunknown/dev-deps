{
    "name": "@virtuallyunknown/eslint-server",
    "version": "0.4.1",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "node esbuild.js",
        "check": "tsc",
        "lint": "eslint 'src/**/*.ts' --max-warnings 0 --report-unused-disable-directives"
    },
    "exports": {
        ".": {
            "types": "./src/index.js",
            "import": "./out/index.js"
        },
        "./types": {
            "types": "./src/types.js",
            "import": "./out/types.js"
        },
        "./trpc": {
            "types": "./src/trpc.js",
            "import": "./out/trpc.js"
        },
        "./db": {
            "types": "./src/db/db.ts",
            "import": "./out/db/db.js"
        }
    },
    "dependencies": {
        "@stylistic/eslint-plugin": "5.6.1",
        "@trpc/client": "^11.8.0",
        "@trpc/server": "^11.8.0",
        "ajv": "6.12.6",
        "eslint": "9.39.2",
        "eslint-plugin-react": "7.37.5",
        "eslint-plugin-react-hooks": "7.0.1",
        "eslint-plugin-unicorn": "62.0.0",
        "express": "^5.1.0",
        "json-schema": "^0.4.0",
        "microdiff": "^1.5.0",
        "superjson": "^2.2.6",
        "typescript-eslint": "8.49.0",
        "zod": "^3.25.67"
    },
    "devDependencies": {
        "@types/eslint": "^9.6.1",
        "@types/express": "^5.0.6",
        "@types/json-schema": "^7.0.15",
        "@virtuallyunknown/esbuild": "workspace:*",
        "@virtuallyunknown/eslint-config": "workspace:*",
        "@virtuallyunknown/tsconfig": "workspace:*"
    }
}
