{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"],
            "cache": true
        },
        "check": {
            "dependsOn": ["check"],
            "cache": false
        }
    },
    "affected": {
        "defaultBase": "master"
    },
    "release": {
        "releaseTagPattern": "{version}",
        "projectsRelationship": "fixed",
        "projects": [
            "packages/esbuild",
            "packages/eslint-config",
            "packages/tsconfig"
        ],
        "version": {
            "generatorOptions": {
                "currentVersionResolver": "git-tag"
            }
        }
    }
}
